<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/background_light"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<!--    Vertical Constraints-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.37"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintVertical4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.63" />

<!--    Horizontal Constraints -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="90dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/contraintHorizontal4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.81" />

    <!--    Text View -->

    <TextView
        android:id="@+id/textSubheading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="YOUR EMOTION'S MATTER"
        android:textAlignment="center"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/textHeading"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="MINDJAR"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal1"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal3"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Password"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/editUserName"
        tools:ignore="MissingConstraints" />


    <!--    Image View-->

    <TextView
        android:id="@+id/textForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Forgot Password"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Or Register With"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/textForgotPassword" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="133dp"
        android:layout_height="145dp"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal1"
        app:srcCompat="@drawable/jar_icon"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/textUserName"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/textPassword" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remember Me"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/editPassword"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Login"
        android:textSize="20sp"
        android:backgroundTint="@color/button_green"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iconTwitter"
        android:layout_width="68dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@+id/contraintHorizontal2"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical4"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical3"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal4"
        app:srcCompat="@drawable/twitter_circle"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iconGoogle"
        android:layout_width="68dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@+id/contraintHorizontal2"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical3"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical1"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal4"
        app:srcCompat="@drawable/google" />

    <ImageView
        android:id="@+id/iconFacebook"
        android:layout_width="68dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toTopOf="@+id/contraintHorizontal2"
        app:layout_constraintEnd_toStartOf="@+id/contraintVertical2"
        app:layout_constraintStart_toStartOf="@+id/contraintVertical4"
        app:layout_constraintTop_toTopOf="@+id/contraintHorizontal4"
        app:srcCompat="@drawable/facebook" />


</androidx.constraintlayout.widget.ConstraintLayout>





