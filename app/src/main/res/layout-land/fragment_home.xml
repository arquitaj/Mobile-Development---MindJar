<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical"
    android:overScrollMode="always"
    android:isScrollContainer="true"
    android:clipToPadding="false"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- centering rails (explicit size -> fixes lint) -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalConstraint1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/verticalConstraint2"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.90" />

        <!-- Header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintWidth_max="900dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:baselineAligned="false">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:scaleType="centerInside"
                    android:src="@drawable/handshake"
                    android:contentDescription="@string/cd_handshake"/>

                <TextView
                    android:id="@+id/textWelcomeUser"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/home_welcome_user"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/home_feeling_question"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintWidth_max="900dp"/>

        <!-- Emotions row (comfortable size + padding inside tiles) -->
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintTop_toBottomOf="@id/textView9"
            app:layout_constraintWidth_max="900dp">

            <!-- Happy -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:padding="10dp"
                android:background="#BFDDA0">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/slightly_happy"
                    android:contentDescription="@string/cd_happy"/>
            </FrameLayout>

            <!-- Sad -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:padding="10dp"
                android:background="#B8D6FF">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sad"
                    android:contentDescription="@string/cd_sad"/>
            </FrameLayout>

            <!-- Pressured -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:padding="10dp"
                android:background="#FFD07F">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/scrunched_eyes"
                    android:contentDescription="@string/cd_pressured"/>
            </FrameLayout>

            <!-- Angry -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:padding="10dp"
                android:background="#F28A80">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/rage"
                    android:contentDescription="@string/cd_angry"/>
            </FrameLayout>
        </LinearLayout>

        <!-- Labels -->
        <LinearLayout
            android:id="@+id/labelsRow"
            android:baselineAligned="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintTop_toBottomOf="@id/linearLayout"
            app:layout_constraintWidth_max="900dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_happy"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_sad"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_pressured"
                android:textSize="12sp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/label_angry"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Below-the-fold content -->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/home_add_your_feelings"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintTop_toBottomOf="@id/labelsRow"
            app:layout_constraintWidth_max="900dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/black"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintTop_toBottomOf="@id/textView10"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintWidth_max="900dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="4"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:hint="@string/home_feeling_hint" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- MIC + UPLOAD row (added back) -->
        <LinearLayout
            android:id="@+id/attachmentsRow"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="8dp"
            android:gravity="end|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintTop_toBottomOf="@id/textInputLayout"
            app:layout_constraintWidth_percent="0.8"
            app:layout_constraintWidth_max="900dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:src="@drawable/microphone"
                android:contentDescription="@string/cd_microphone" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:src="@drawable/upload"
                android:contentDescription="@string/cd_upload" />
        </LinearLayout>

        <!-- Send button + “sent” icon (added back) -->
        <Button
            android:id="@+id/button"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/home_send"
            app:layout_constraintStart_toStartOf="@id/verticalConstraint1"
            app:layout_constraintEnd_toStartOf="@id/verticalConstraint2"
            app:layout_constraintTop_toBottomOf="@id/attachmentsRow"
            app:layout_constraintWidth_max="900dp"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/sent"
            android:contentDescription="@string/cd_sent"
            app:layout_constraintTop_toTopOf="@id/button"
            app:layout_constraintBottom_toBottomOf="@id/button"
            app:layout_constraintEnd_toEndOf="@id/button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>